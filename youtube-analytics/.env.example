# Environment Variables for YouTube Analytics Platform
# Copy this file to .env.local and fill in your own values

# Clerk Authentication (replaces NextAuth)
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=
CLERK_SECRET_KEY=
CLERK_JWT_ISSUER_DOMAIN= # e.g. https://<your-tenant>.clerk.accounts.dev

## For production deployment on Vercel, set your site URL via `NEXT_PUBLIC_SITE_URL` if needed
NEXT_PUBLIC_SITE_URL=

# Vercel Postgres (primary application database)
# See: https://vercel.com/docs/storage/vercel-postgres/quickstart
POSTGRES_URL=
POSTGRES_URL_NON_POOLING=
POSTGRES_USER=
POSTGRES_PASSWORD=
POSTGRES_HOST=
POSTGRES_DATABASE=

# OpenAI (for LLM-powered insights)
OPENAI_API_KEY=

# Convex (database + functions)
# When running `npx convex dev`, it prints your dev URL.
NEXT_PUBLIC_CONVEX_URL=
