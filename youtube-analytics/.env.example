# Environment Variables for YouTube Analytics Platform
# Copy this file to .env.local and fill in your own values

# NextAuth Configuration
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-secret-key-here

# Google OAuth Configuration
# Get these from Google Cloud Console: https://console.cloud.google.com/
GOOGLE_CLIENT_ID=your-google-client-id-here
GOOGLE_CLIENT_SECRET=your-google-client-secret-here

# Vercel Blob Storage Configuration
# Get this from your Vercel dashboard: https://vercel.com/dashboard/stores
# Required for storing user data in the cloud
BLOB_READ_WRITE_TOKEN=your-vercel-blob-token-here

# For production deployment on Vercel, set NEXTAUTH_URL to your domain
# Example: NEXTAUTH_URL=https://your-app.vercel.app

# Vercel Blob (for raw uploads persistence)
# Generate a token in Vercel: https://vercel.com/docs/storage/vercel-blob/quickstart#creating-an-access-token
BLOB_READ_WRITE_TOKEN=

# Vercel Postgres (primary application database)
# See: https://vercel.com/docs/storage/vercel-postgres/quickstart
POSTGRES_URL=
POSTGRES_URL_NON_POOLING=
POSTGRES_USER=
POSTGRES_PASSWORD=
POSTGRES_HOST=
POSTGRES_DATABASE=

# OpenAI (for LLM-powered insights)
OPENAI_API_KEY=

# Clerk (authentication)
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=
CLERK_SECRET_KEY=

# Convex (database + functions)
# When running `npx convex dev`, it prints your dev URL.
NEXT_PUBLIC_CONVEX_URL=
