# Environment Variables for Rabbit (apps/web)
# Copy this file to .env.local and fill in your own values

# Clerk Authentication
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=
CLERK_SECRET_KEY=
CLERK_JWT_ISSUER_DOMAIN= # e.g. https://<your-tenant>.clerk.accounts.dev

# Optional: public site URL (used in some metadata links)
NEXT_PUBLIC_SITE_URL=

# Convex (database + functions)
# When running `npx convex dev` (inside apps/web), it prints your dev URL.
NEXT_PUBLIC_CONVEX_URL=
CONVEX_DEPLOY_KEY=
CONVEX_SERVICE_TOKEN=

# Optional: external providers for background processing
YOUTUBE_API_KEY=
OPENAI_API_KEY=
OPENAI_SUMMARY_MODEL=gpt-4o-mini

# Vercel Blob Storage
BLOB_READ_WRITE_TOKEN=

# Worker runtime tuning (milliseconds to wait between polling cycles)
WORKER_IDLE_MS=2000
