# Server Configuration
PORT=5000
NODE_ENV=development

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/rabbit-analytics

# CORS Configuration
CORS_ORIGIN=http://localhost:3000,http://localhost:3001

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload Configuration
MAX_FILE_SIZE=50mb
UPLOAD_TIMEOUT=300000

# Logging Configuration
LOG_LEVEL=debug
LOG_FORMAT=json
LOG_TO_FILE=true
LOG_MAX_FILE_SIZE=10MB
LOG_MAX_FILES=5
LOG_DATE_PATTERN=YYYY-MM-DD
ENABLE_REQUEST_LOGGING=true
ENABLE_PERFORMANCE_MONITORING=true
LOG_SLOW_QUERIES=true
SLOW_QUERY_THRESHOLD=1000
ENABLE_CORRELATION_IDS=true
LOG_SANITIZE_SENSITIVE=true

# Development Logging Features
ENABLE_DETAILED_LOGGING=true
LOG_API_REQUESTS=true
LOG_DATABASE_OPERATIONS=true
LOG_EXTERNAL_SERVICE_CALLS=true

# Monitoring Integration (Optional)
SENTRY_DSN=
DATADOG_API_KEY=
LOGTAIL_SOURCE_TOKEN=
ENABLE_SENTRY_LOGGING=false
ENABLE_DATADOG_LOGGING=false
ENABLE_LOGTAIL_LOGGING=false

# YouTube API Configuration
YOUTUBE_API_KEY=your-youtube-api-key-here
YOUTUBE_QUOTA_LIMIT=10000
BATCH_SIZE=50
API_DELAY_MS=100
MAX_CONCURRENT_REQUESTS=5

# Web Scraping Configuration
SCRAPING_ENABLED=true
SCRAPING_CONCURRENT_REQUESTS=3
SCRAPING_DELAY_MS=2000
SCRAPING_TIMEOUT_MS=30000
SCRAPING_RETRY_ATTEMPTS=3
SCRAPING_ENABLE_JAVASCRIPT=false
SCRAPING_ENABLE_BROWSER=true
SCRAPING_CACHE_ENABLED=true
SCRAPING_CACHE_TTL=86400

# Service Configuration
# Set to "scraping" to use scraping by default, "api" for API, "auto" for API with scraping fallback
DEFAULT_ENRICHMENT_SERVICE=auto

# LLM Scraping Configuration (Optional - for AI-powered data extraction)
LLM_SCRAPING_ENABLED=false
LLM_PROVIDER=anthropic
LLM_MODEL=claude-3-haiku-20240307
OPENROUTER_API_KEY=your_openrouter_api_key_here
LLM_MAX_TOKENS=2000
LLM_TEMPERATURE=0.1
LLM_MAX_CONCURRENT_REQUESTS=5
LLM_REQUEST_DELAY_MS=1000
LLM_RETRY_ATTEMPTS=2
LLM_TIMEOUT_MS=30000
LLM_BATCH_SIZE=10
LLM_COST_LIMIT=10.0
LLM_CACHE_ENABLED=true
LLM_CACHE_TTL=7200
LLM_HTML_CHUNK_SIZE=100000
LLM_ENABLE_FALLBACK=true 